@{
    ViewData["Title"] = "Grade Calculator";
}
@model FormModel;
@*inherts from the form model above*@


<h5>Enter grade percentage in each category without a percent sign below: </h5>
<!--grade front end form-->
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /><br /><br />
    <label>Group Project:</label>
    <input id="groupProject" asp-for="groupProject" /><br /><br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes" /><br /><br />
    <label>Midterm Exam:</label>
    <input id="midterm" asp-for="midterm" /><br /><br />
    <label>Final Exam:</label>
    <input id="final" asp-for="final" /><br /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex" /><br /><br />
    <input id="calculateGrade" type="submit" value="Calculate Grade" />
    <div asp-validation-summary="All"></div>
</form>

<!--Link to jquery for this page-->
<script src="~/lib/jquery/jquery-3.6.3.min.js"></script>


